<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"

    android:clipToPadding="false"
android:layout_marginBottom="6dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="15dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTipText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FF000000"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:text="该人员的服务方式为？"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/guide1menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <CheckBox
                            android:id="@+id/guide1"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:clickable="false"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            android:button="@drawable/btn_checke"
                            android:checked="false" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#FF000000"
                                android:text="买家到场/寄送"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#FFD7DAE5"
                                android:text="如被服务对象为人员，则需到场/如被服务对象为物件，则需寄送"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/guide2menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <CheckBox
                            android:id="@+id/guide2"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            android:clickable="false"
                            android:button="@drawable/btn_checke"
                            android:checked="false" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#FF000000"
                                android:text="到场服务"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#FFD7DAE5"
                                android:text="供应商将会通过采购商提供的服务地址到指定地点为其项目提供相应服务"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/guide3menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/guide3"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            android:clickable="false"
                            android:button="@drawable/btn_checke"
                            android:checked="false" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#FF000000"
                                android:text="线上传输"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#FFD7DAE5"
                                android:text="供应商会为采购商提供一个指定邮箱，可将需要服务的文件发送至该邮箱"/>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/tip_project_select_member"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="23dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tv_goBack"
                        android:layout_width="155dp"
                        android:layout_height="59dp"
                        android:layout_marginEnd="25dp"
                        android:background="@mipmap/login_btn_cancel"
                        android:scaleType="center"/>

                    <ImageButton
                        android:id="@+id/tv_nextPage"
                        android:layout_width="155dp"
                        android:layout_height="59dp"
                        android:scaleType="fitCenter"
                        android:background="@mipmap/login_btn_next" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/avatars_login" />


    </RelativeLayout>


</LinearLayout>