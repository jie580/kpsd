<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.ming.sjll.ui.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/label_home_a"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/label_home_b"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textSize="10sp" />
        <!--android:drawableTop="@mipmap/label_home_a"-->
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/label_home_c"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/label_home_d"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textSize="10sp" />
    </RadioGroup>


</LinearLayout>