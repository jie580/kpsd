    <data>

    </data>

    <LinearLayout
        android:id="@id/rc_item_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="15dp">



            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="355dp"
                android:layout_height="181dp"
                android:layout_marginTop="39dp"
                android:background="@drawable/shape_left_right_35_chat">
                <ImageView
                    android:id="@+id/rc_unread_message_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_all_corner"
                    android:backgroundTint="@color/red"
                 />

                <io.rong.imkit.widget.ProviderContainerView
                    android:id="@+id/rc_content"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="9dp"
                    android:background="@android:color/transparent" />


                <LinearLayout
                    android:layout_width="279dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/chat_group_bg"
                    android:layout_marginTop="41dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/project"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="春季新品拍摄"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="正在进行"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/progress"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="综合服务"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>



            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:background="@mipmap/chat_head_bg" />
            <io.rong.imkit.widget.AsyncImageView
                android:id="@+id/header"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:layout_marginTop="6dp"
                bind:RCShape="circle"
                android:layout_marginLeft="25dp"
                bind:RCDefDrawable="@drawable/rc_default_portrait" />

