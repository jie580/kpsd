<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subYear"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/btn_solid_left" />
                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/addYear"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/btn_solid_right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/subMonth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/btn_solid_left"
                    />
                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/addMonth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/btn_solid_right"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:orientation="vertical">
             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="日"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="六"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />
                </LinearLayout>

            <com.ming.sjll.ui.FalseCalendar
                android:id="@+id/monthCalendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:isShowHoliday="false"
                app:isShowLunar="false"
                app:pointColor="@color/LL_0A3FFF"
                app:pointDistance="-13dp"
                app:selectCircleColor="@color/LL_0A3FFF"
                app:selectCircleRadius="18dp"
                app:workdayColor="@color/LL_F0F0F0">

            </com.ming.sjll.ui.FalseCalendar>

        </LinearLayout>
    </LinearLayout>
</layout>
