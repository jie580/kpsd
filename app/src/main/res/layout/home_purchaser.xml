<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/adWrap"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:visibility="gone">

        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="357dp"
            android:layout_height="147dp"
            android:layout_margin="@dimen/dp_10" />
        <!--轮播小点-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--用来动态添加轮播小点-->
            <LinearLayout
                android:id="@+id/lineLayout_dot"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/contentWrap"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/guide1"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_procurer_guide1" />

            <ImageButton
                android:id="@+id/guide2"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_procurer_guide2" />

            <ImageButton
                android:id="@+id/guide3"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_procurer_guide3" />

            <ImageButton
                android:id="@+id/guide4"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/home_procurer_guide4" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="综合服务"
                android:layout_marginBottom="10dp"
                android:textColor="@color/LL_000000"
                android:textSize="18sp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/service1"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/home_procurer_service1" />

                    <ImageButton
                        android:id="@+id/service2"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/home_procurer_service2" />

                    <ImageButton
                        android:id="@+id/service3"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/home_procurer_service3" />

                    <ImageButton
                        android:id="@+id/service4"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/home_procurer_service4" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="355dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="我想找人"
                android:layout_marginBottom="10dp"
                android:textColor="@color/LL_000000"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/occ1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/home_occ_1" />
                    <ImageButton
                        android:id="@+id/occ2"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/home_occ_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/occ3"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/home_occ_3" />

                    <ImageButton
                        android:id="@+id/occ4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/home_occ_4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/occ5"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/home_occ_5" />

                    <ImageButton
                        android:id="@+id/occ6"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/home_occ_6" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/occ10"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:background="@mipmap/home_occ_10" />

                    <ImageButton
                        android:id="@+id/occ11"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/home_occ_11" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="355dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="我想借物"
                android:layout_marginBottom="10dp"
                android:textColor="@color/LL_000000"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/occ7"
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:background="@mipmap/home_occ_7" />

                <ImageButton
                    android:id="@+id/occ8"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_occ_8" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/occ9"
                android:layout_width="120dp"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_occ_9" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>