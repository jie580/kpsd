<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
android:layout_marginBottom="6dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                       <TextView
                           android:id="@+id/tvTipText"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:minHeight="87dp"
                           android:text="，退出至登录页面，请重新登录"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_goBack"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginEnd="25dp"
                    android:src="@mipmap/login_btn_cancel" />

                <ImageView
                    android:id="@+id/tv_nextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:src="@mipmap/login_btn_next" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/avatars_login" />

        <LinearLayout
            android:id="@+id/isPromptWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="65dp">
            <CheckBox
                android:id="@+id/isPrompt"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="12dp"
                android:checked="false"
                android:button="@drawable/btn_checke" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不再提示"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>