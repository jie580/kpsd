<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_input_bg_big9">



        <RelativeLayout
            android:id="@+id/projectWrap"
            android:layout_width="355dp"
            android:layout_height="290dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"

            android:visibility="visible">


            <com.ming.sjll.ui.CustomRoundAngleImageView
                android:id="@+id/projectBg"
                android:layout_width="357dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                custom:radius="15dp"
                android:src="@mipmap/ic_launcher"
                />
            <View
                android:id="@+id/selectWrap"
                android:layout_width="357dp"
                android:layout_height="200dp"
                android:background="@drawable/side_blue_3"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:gravity="end"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectDemand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_left_right_corner"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        android:text="Hello World!"
                        android:textStyle="bold"
                        android:textColor="@color/LL_000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/projectBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_left_right_corner"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="8dp"
                    android:text="Hello World!"
                    android:textStyle="bold"
                    android:textColor="@color/LL_000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="311dp"
                android:layout_height="62dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_project_payment"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
