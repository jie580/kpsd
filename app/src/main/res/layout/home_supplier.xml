<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/adWrap"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:visibility="gone">

        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="357dp"
            android:layout_height="147dp"
            android:layout_margin="@dimen/dp_10" />
        <!--轮播小点-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--用来动态添加轮播小点-->
            <LinearLayout
                android:id="@+id/lineLayout_dot"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/contentWrap"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/guide1"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_supplier_guide1" />

            <ImageButton
                android:id="@+id/guide2"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_supplier_guide2" />

            <ImageButton
                android:id="@+id/guide3"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="22dp"
                android:background="@mipmap/home_supplier_guide3" />

            <ImageButton
                android:id="@+id/guide4"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/home_supplier_guide4" />

        </LinearLayout>
    </LinearLayout>







    <LinearLayout
        android:id="@+id/tabMode"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#fff"
        android:paddingTop="43dp"
        android:gravity="center"
        android:tag="sticky"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/project_list_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.5sp"
            android:textColor="#80B5FF"
            android:layout_marginLeft="38dp"
            android:textStyle="bold"
            android:text="项目"/>

        <TextView
            android:id="@+id/project_list_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.5sp"
            android:textColor="#000000"
            android:layout_marginLeft="38dp"
            android:textStyle="bold"
            android:text="通告"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="14dp"
            >
        <TextView
            android:id="@+id/project_list_type_more"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:background="@drawable/side_black_1"
