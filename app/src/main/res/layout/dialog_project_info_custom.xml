<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"

    android:clipToPadding="false"
android:layout_marginBottom="6dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#F2F3F7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/projectBg"
                        android:layout_width="345dp"
                        android:layout_height="189dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"/>


                    <RelativeLayout
                        android:id="@+id/demand"
                        android:layout_width="355dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/shape_white_30_corner" />


                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/LL_000000"
                            android:textSize="14sp"
                            android:text="工作" />


                        <TextView
                            android:id="@+id/demandTip"
                            android:layout_width="74dp"
                            android:gravity="center"
                            android:layout_height="27dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_gray_15_corner"
                            android:layout_marginEnd="13dp"
                            android:textColor="#FFFFFF"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="14sp"
                            android:text="自添项目" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/selectQuoteWrap"
                        android:layout_width="355dp"
                        android:layout_height="116dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_white_30_corner"
                        android:layout_marginTop="11dp"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:id="@+id/selectTime"
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_centerHorizontal="true"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/startTimeDay"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_marginLeft="14dp"
                                    android:background="@drawable/shape_gray_circler"
                                    android:gravity="center"
                                    android:text="33"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/startTime"
                                    android:layout_width="78dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="开始日期"
                                    android:textColor="#FF80B5FF"

                                    android:textSize="14sp" />


                                <View
                                    android:layout_width="33dp"
                                    android:layout_height="3dp"
                                    android:layout_marginStart="27dp"
                                    android:background="#FF000000" />

                                <TextView
                                    android:id="@+id/endTimeDay"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_marginLeft="26dp"
                                    android:background="@drawable/shape_gray_circler"
                                    android:gravity="center"
                                    android:text="33"
                                    android:textColor="#FFFFFFFF"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/endTime"
                                    android:layout_width="78dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="结束日期"
                                    android:textColor="#FF80B5FF"
                                    android:textSize="14sp" />


                            </LinearLayout>


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/daySwitch"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"

                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="30dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="全天"
                                android:layout_gravity="center_vertical"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />


                            <ImageView
                                android:id="@+id/isDay"
                                android:layout_width="106dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:background="@mipmap/btn_switch_y"
                                android:text="" />

                        </LinearLayout>

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/dateListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <RelativeLayout
                        android:id="@+id/address"
                        android:layout_width="355dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/shape_white_30_corner" />


                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/LL_000000"
                            android:textSize="14sp"
                            android:text="地点" />


                        <TextView
                            android:id="@+id/addressTip"
                            android:layout_width="200dp"
                            android:gravity="right|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="53dp"
                            android:textColor="@color/LL_000000"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="14sp"
                            android:text="" />

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:background="@mipmap/ic_biaoji2" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="145dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/shape_gray_50_corner"
                        android:text="修改"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="145dp"
                        android:layout_height="47dp"
                        android:gravity="center"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/shape_red_30_corner"
                        android:text="删除"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14"
                        android:scaleType="center"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>