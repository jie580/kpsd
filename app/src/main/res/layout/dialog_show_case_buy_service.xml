<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_left_right_30"
        >


        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
           >



            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                     <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="68dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_white_15_corner">

                    <TextView
                        android:id="@+id/tvTipText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FF000000"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="22dp"
                        android:textSize="14sp"
                        android:text="该项目的服务方式为"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/guide1menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp">

                            <ImageView
                                android:id="@+id/guide1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                android:background="@mipmap/btn_checked_un"
                                android:checked="false" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FF000000"
                                    android:text="买家到场/寄送"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FFD7DAE5"
                                    android:text="如被服务对象为人员，则需到场/如被服务对象为物件，则需寄送"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guide2menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <ImageView
                                android:id="@+id/guide2"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                android:background="@mipmap/btn_checked_un"
                                android:checked="false" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FF000000"
                                    android:text="商家到场"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FFD7DAE5"
                                    android:text="供应商将会通过采购商提供的服务地址到指定地点为其项目提供相应服务"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guide3menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <ImageView
                                android:id="@+id/guide3"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                android:background="@mipmap/btn_checked_un"
                                android:checked="false" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FF000000"
                                    android:text="线上传输"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#FFD7DAE5"
                                    android:text="供应商会为采购商提供一个指定邮箱，可将需要服务的文件发送至该邮箱"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:text="提示：服务方式为供应商拟定，不可更改"
                            android:textSize="12dp"
                            android:textColor="#fff"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/shape_gray_50_corner"
                            android:layout_marginBottom="20dp"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/selectType1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_white_15_corner"
                        android:layout_marginTop="15dp">


                        <LinearLayout
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="21dp"
                            android:paddingBottom="21dp"
                            android:orientation="vertical"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="3dp"
                                    />

                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="match_parent"
                                    android:gravity="left|center_vertical"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="22dp"
                                    android:textColor="@color/LL_000000"
                                    android:textSize="16dp"
                                    android:text="供应商地址" />




                                <TextView
                                    android:id="@+id/addressTip"
                                    android:layout_width="120dp"
                                    android:gravity="right|center_vertical"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/LL_000000"
                                    android:textSize="16dp"
                                    android:ellipsize="end"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="20dp"
                                    android:lines="1"
                                    android:text="12343243214" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/addressTip2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="具体位置"
                                android:textSize="12sp"
                                android:textColor="#FF000000"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="20dp"/>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                >

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/side_blue_3"
                                    android:gravity="center"
                                    android:textColor="#FF80B5FF"
                                    android:text="复制"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="26dp"
                        android:gravity="center"
                        android:text="提示：发送邮箱后续可在订单详情中查看"
                        android:textSize="12dp"
                        android:textColor="#fff"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_gray_50_corner"
                        android:layout_marginBottom="20dp"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/selectType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/addressTitle"
                        android:layout_width="355dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100in"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/shape_white_30_corner" />


                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/LL_000000"
                            android:textSize="14sp"
                            android:text="到场地址" />


                        <TextView
                            android:id="@+id/addressTitleTip"
                            android:layout_width="200dp"
                            android:gravity="right|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="53dp"
                            android:textColor="@color/LL_000000"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="14sp"
                            android:text="" />

                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:background="@mipmap/ic_biaoji2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/address"
                        android:layout_width="355dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100in"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/shape_white_30_corner" />


                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/LL_000000"
                            android:textSize="14sp"
                            android:text="到场详细地址" />


                        <EditText
                            android:id="@+id/addressTip"
                            android:layout_width="180dp"
                            android:gravity="right|center_vertical"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@null"
                            android:layout_marginEnd="53dp"
                            android:textColor="@color/LL_000000"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="14sp"
                            android:text="" />


                    </RelativeLayout>


                </LinearLayout>





                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="345dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:background="@mipmap/line_input_money_bg" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:focusable="true"
                    android:gravity="left|center_vertical"
                    android:text="￥18000"
                    android:textColor="#0A3FFF"
                    android:textSize="14sp" />



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>