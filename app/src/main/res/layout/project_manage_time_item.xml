<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="100dp"
        android:layout_gravity="center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:minHeight="100dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_white_30_corner"
            >
            <ImageView
                android:id="@+id/add"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_edit" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="17dp"/>

                <HorizontalScrollView
                    android:id="@+id/listViewHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/userLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/transparent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center_vertical">

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/noneData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FFD7DAE5"
                    android:text="请点击右上角编辑添加时间及费用规划"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="28dp"/>

                <ImageView
                    android:layout_width="316.5dp"
                    android:layout_height="1.5dp"
                    android:layout_marginBottom="14dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_line_halving"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginBottom="23dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@mipmap/ic_money"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计费用"
                        android:textColor="#FF000000"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="38"
                        android:textColor="#FF000000"
                        android:layout_marginLeft="38dp"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ming.sjll.ui.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageView
                    android:id="@+id/isConflict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_not_time_string"
                    android:layout_marginTop="54dp"/>
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginStart="18dp">
                <TextView
                    android:id="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUZZ.JH"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FF000000"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摄影师"
                    android:textColor="#FF000000"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
