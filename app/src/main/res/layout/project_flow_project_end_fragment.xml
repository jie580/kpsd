<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/line_input_bg_big3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱地址"
                android:textSize="14sp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入邮件，系统会将作品原文件发送给您"
                android:textColor="#FFD7DAE5"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="94dp"
                android:lines="2"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/toEmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="55dp"
                android:background="@null"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:inputType="text"
                android:text=""
                android:textSize="16sp" />

            <Button
                android:id="@+id/toEmail"
                android:layout_width="83dp"
                android:layout_height="29dp"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="151dp"
                android:background="@mipmap/btn_send4"/>


        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/tip_project_end"/>



        <RelativeLayout
            android:id="@+id/occupation"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100in"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/line_input_bg" />


            <TextView
                android:layout_width="match_parent"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:textColor="@color/LL_000000"
                android:textSize="16dp"
                android:text="将作品转至个人主页" />


            <TextView
                android:id="@+id/occupationTip"
                android:layout_width="200dp"
                android:gravity="right|center_vertical"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="53dp"
                android:textColor="@color/LL_000000"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16dp"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="33dp"
                android:background="@mipmap/btn_solid_right" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            >

            <com.ming.sjll.ui.CustomRoundAngleImageView
                android:id="@+id/imageItem"
                android:layout_width="275dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/ic_launcher"
                custom:radius="15dp"
                />
            <ImageView
                android:layout_width="87.99dp"
                android:layout_height="62.29dp"
                android:layout_marginLeft="156dp"
                android:layout_marginTop="-7dp"
                android:src="@mipmap/ic_recommend"/>


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
